
@model TailMeal.Models.Siparis
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<br><br>
<br><br>
<h2>Siparişi Tamamla</h2>

<form asp-controller="Siparis" asp-action="Tamamla" method="post">
    <div class="form-group ">
        <label>Ad Soyad</label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Adres</label>
        <textarea asp-for="Adres" class="form-control"></textarea>
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Ödeme Türü</label>
        <select asp-for="OdemeTuru" class="form-control" id="odemeSecimi">
            <option value="">Seçiniz</option>
            <option value="Kart">Kredi Kartı</option>
            <option value="Kapida">Kapıda Ödeme</option>
        </select>
        <span asp-validation-for="OdemeTuru" class="text-danger"></span>
    </div>

    <div class="form-group" id="kartAlani" style="display:none;">
        <label>Kart Numarası</label>
        <input asp-for="KartNumarasi" class="form-control" />
        <span asp-validation-for="KartNumarasi" class="text-danger"></span>
    </div>
    <br><br>
    <button type="submit" class="btn btn-primary">Siparişi Onayla</button>
</form>

@section Scripts {
    <script>
        document.getElementById("odemeSecimi").addEventListener("change", function () {
            const kartAlani = document.getElementById("kartAlani");
            if (this.value === "Kart") {
                kartAlani.style.display = "block";
            } else {
                kartAlani.style.display = "none";
            }
        });
    </script>
}